# Force HTTPS
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Exclude static files from SPA rewrite
  RewriteCond %{REQUEST_URI} !\.(pdf|jpg|jpeg|png|gif|webp|svg|css|js|ico|woff|woff2|ttf|eot)$ [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

